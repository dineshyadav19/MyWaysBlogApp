<% layout('layouts/boilerplate') %> 

<div class="row">
    <h2 class="text-center">
        Blog Editor
    </h2>
    <div class="col-6 offset-3">
        <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="blog[title]" value="<%= blog.title %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <div class="input-group mb-3">
                    <input type="file" class="form-control" id="image" name="image" multiple>
                    <label class="input-group-text" for="image">Upload</label>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Content</label>
                <textarea class="form-control" type="text" id="description" name="blog[description]" required><%= blog.description %></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mt-3 mb-3">
                <button class="btn btn-success">Update Blog</button>
            </div>
        </form>
        <a href="/blogs/<%= blog._id %>">Back to blogs</a>
    </div>
</div>