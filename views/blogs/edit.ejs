<% layout('layouts/boilerplate') %> 

<div class="row">
    <h2 class="text-center">
        Blog Editor
    </h2>
    <div class="col-6 offset-3">
        <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div>
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="blog[title]" value="<%= blog.title %> ">
            </div>
            <div>
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="blog[image]" value="<%= blog.image %> ">
            </div>
            <div>
                <label class="form-label" for="description">Content</label>
                <textarea class="form-control" type="text" id="description" name="blog[description]"><%= blog.description %></textarea>
            </div>
            <div class="mt-3 mb-3">
                <button class="btn btn-success">Update Blog</button>
            </div>
        </form>
        <a href="/blogs/<%= blog._id %>">Back to blogs</a>
    </div>
</div>