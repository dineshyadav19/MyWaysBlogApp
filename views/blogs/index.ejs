<% layout('layouts/boilerplate') %> 

<h1>All Blogs Here</h1>

<div>
    <a href="/blogs/new">Create a new blog</a>
</div>

<% for(let blog of blogs) {%>
<div class="card" mb-3>
    <div class="row">
        <div class="col-md-4">
            <img src="<%= blog.image %> " alt="" class="img-fluid">
        </div>
        <div class="col-mg-8">
            <div class="card-body">
                <h5 class="card-title">
                    <%= blog.title %> 
                </h5>
                <p class="card-text">
                    <small class="text-muted">
                        Published by: Dinesh
                    </small>
                </p>
                <a href="/blogs/<%= blog._id %> " class="btn btn-primary">View <%= blog.title %></a>
            </div>
        </div>
    </div>
</div>
<% } %> 

