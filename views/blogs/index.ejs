<% layout('layouts/boilerplate') %> 

<h3>MyWays</h3>

<div class="d-flex flex-row-reverse">
    <div class="p-2 bd-highlight">
        <a href="/blogs/new" class="btn btn-info mb-3 mt-auto">Create a new blog</a>
    </div>
</div>

<div class="row text-center" style="display:flex; flex-wrap: wrap;">
    <% for(let blog of blogs) {%>
    <div class="col-md-3 col-sm-6">
        <div class="card mb-3">
            <img src="<%= blog.images[0].url %>" class="img-fluid card-img-top">
            <div class="card-body">
                <h4 class="card-title"><%= blog.title %></h4>
                <p>
                    <p class="card-text">
                        <small class="text-muted">
                            Published at: 
                        </small>
                    </p>
                    <a href="/blogs/<%= blog._id %> " class="btn btn-primary">View <%= blog.title %></a>
                </p>
            </div>
        </div>
    </div>
    <% } %>
</div>



