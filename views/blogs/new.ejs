<% layout('layouts/boilerplate') %> 

<div class="row">
    <h2 class="text-center">
        New Blog
    </h2>
    <div class="col-6 offset-3">
        <form action="/blogs" method="POST">
            <div>
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="blog[title]">
            </div>
            <div>
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="blog[image]">
            </div>
            <div>
                <label class="form-label" for="description">Content</label>
                <textarea class="form-control" type="text" id="description" name="blog[description]"></textarea>
            </div>
            <div class="mt-3 mb-3">
                <button class="btn btn-success">Create Blog</button>
            </div>
        </form>
        <a href="/blogs">All Blogs</a>
    </div>
</div>
